{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "index.js",
    "prisma/**/*",
    "config/*.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}