{
  "name": "shido-api-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "types": "./types/global.d.ts",
  "scripts": {
    "start": "nodemon index.js",
    "build": "npm run lint && tsc -p . && cp .env ./build/.env && cp .env.local ./build/.env.local",
    "build:test": "npm run lint && tsc -p . && cp .env ./build/.env && cp .env.test ./build/.env.test",
    "build:prod": "tsc -p .",
    "build:stag": "npm run lint && tsc -p . && cp .env ./build/.env && cp .env.stag ./build/.env.stag",
    "start:local": "npm run lint && NODE_ENV=local nodemon index.js",
    "start:test": "NODE_ENV=test node build/src/server.js",
    "start:staging": "NODE_ENV=staging node build/src/server.js",
    "start:production": "NODE_ENV=production node build/src/server.js",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "pretty": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "precommit": "npm run lint-fix && npm run pretty",
    "prepush": "npm run lint ",
    "test:custom": "npm test --  tests/unit-tests/environments/environment.spec.ts",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "jest --watch",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "author": "shido",
  "license": "",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@prisma/extension-read-replicas": "^0.2.2",
    "@types/moment": "^2.13.0",
    "amqplib": "^0.10.3",
    "axios": "^1.5.1",
    "cors": "^2.8.5",
    "cron": "^2.4.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "joi": "^17.10.2",
    "jsonwebtoken": "^9.0.1",
    "moment": "^2.29.4",
    "redis": "^4.6.10",
    "regenerator-runtime": "^0.14.0",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0",
    "uuidv4": "^6.2.13",
    "web3": "^4.1.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.7.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prisma": "^5.7.1",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
